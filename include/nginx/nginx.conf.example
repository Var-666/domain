
stream {
    upstream asio_backend {
        server 127.0.0.1:8888 max_fails=2 fail_timeout=5s;
    }

    server {
        listen 9000;                 # 对外暴露端口
        proxy_connect_timeout 3s;
        proxy_timeout 60s;
        proxy_pass asio_backend;

        # 可选：单 IP 连接限流
        # limit_conn_zone $binary_remote_addr zone=perip:10m;
        # limit_conn perip 100;
    }
}

